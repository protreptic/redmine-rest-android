<?xml version="1.0" encoding="utf-8" ?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/creator_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/issue_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Issue subject}"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="8sp"
                    android:autoLink="all"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/creator_avatar" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/issue_creation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Issue creation}"
                    android:textSize="14sp"
                    android:lineSpacingExtra="8sp"
                    android:layout_below="@+id/issue_subject"
                    android:layout_alignStart="@+id/issue_subject"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="{статус}"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/priority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="{приоритет}" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/assign_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="{назначена}" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="{дата начала}" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="{дата завершения}" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/done_ratio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="{готовность}" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>