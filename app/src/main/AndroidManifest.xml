<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="name.peterbukhal.android.redmine">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="false" />

    <application
        android:name=".RedmineApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Redmine"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".activity.LauncherActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <provider
            android:name=".util.ContextProvider"
            android:authorities="context-provider"
            android:exported="false" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="13be963bb16b6a906aea2d9a8f01a769f2d084d4" />
    </application>
</manifest>
